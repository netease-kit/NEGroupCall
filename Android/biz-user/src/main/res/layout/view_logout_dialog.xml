<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_logout_dialog_bg">

        <TextView
            android:id="@+id/tv_logout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="退出登录"
            android:textColor="#ff000000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_logout_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_logout_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="确认退出当前登录账户？"
            android:textColor="#ff333333"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_logout_no"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_below="@+id/line_bottom"
            android:layout_alignEnd="@id/line_divide"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="否"
            android:textColor="#ff666666"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_logout_yes"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_below="@+id/line_bottom"
            android:layout_alignStart="@id/line_divide"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="是"
            android:textColor="#ff007aff"
            android:textSize="17dp" />

        <View
            android:id="@+id/line_divide"
            android:layout_width="0.5dp"
            android:layout_height="43dp"
            android:layout_below="@id/line_bottom"
            android:layout_centerHorizontal="true"
            android:background="#0c000050" />

        <View
            android:id="@+id/line_bottom"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_logout_content"
            android:layout_marginTop="35dp"
            android:background="#0c000050" />
    </RelativeLayout>

</RelativeLayout>