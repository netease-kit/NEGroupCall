<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_12"
        android:paddingTop="@dimen/dp_12"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:textColor="#FF0F0C0A"
            android:textSize="@dimen/text_size_16"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/iv_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/reset" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_14"
            android:text="分辨率" />

        <TextView
            android:id="@+id/tv_1080p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/setting_button_bg"
            android:text="1080P"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/setting_button_text"
            android:layout_marginStart="@dimen/dp_8" />

        <TextView
            android:id="@+id/tv_720p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_1080p"
            android:layout_marginStart="@dimen/dp_8"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/setting_button_text"
            android:text="720P"
            android:background="@drawable/setting_button_bg" />

        <TextView
            android:id="@+id/tv_360p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_720p"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/setting_button_text"
            android:text="360P"
            android:background="@drawable/setting_button_bg" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="#33000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_14"
            android:text="帧率" />

        <TextView
            android:id="@+id/tv_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/setting_button_bg"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/setting_button_text"
            android:text="30"
            android:layout_marginStart="@dimen/dp_8" />

        <TextView
            android:id="@+id/tv_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_30"
            android:layout_marginStart="@dimen/dp_8"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/setting_button_text"
            android:text="24"
            android:background="@drawable/setting_button_bg" />

        <TextView
            android:id="@+id/tv_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_24"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/setting_button_text"
            android:text="15"
            android:background="@drawable/setting_button_bg" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="#33000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_14"
            android:text="音频质量" />

        <TextView
            android:id="@+id/tv_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/setting_button_text"
            android:background="@drawable/setting_button_bg"
            android:text="音乐"
            android:layout_marginStart="@dimen/dp_8" />

        <TextView
            android:id="@+id/tv_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_music"
            android:layout_marginStart="@dimen/dp_8"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/setting_button_text"
            android:text="标准"
            android:background="@drawable/setting_button_bg" />

    </RelativeLayout>


</LinearLayout>
